attribute vec4 a_position;attribute vec3 a_normal;attribute vec2 a_texCoord0;uniform mat4 u_mvp;uniform mat4 u_model;uniform mat4 u_lightMVP;varying vec4 v_color;varying vec2 v_texCoords;varying vec4 normal;varying vec4 v_position;varying vec4 shadow_coordinates;void main(){    v_color = vec4(1, 1, 1, 1);    v_texCoords = a_texCoord0;    gl_Position =  u_mvp * a_position ;    v_position =  u_model * a_position;    shadow_coordinates = u_lightMVP * a_position;    normal = u_model * vec4(a_normal.xyz,0);    }